<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <p>Please fix the following <%= pluralize(@user.errors.count, "error") %>
      </div>
      <ul>
        <% @user.errors.full_messages.each do |e| %>
          <li><%= e %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
